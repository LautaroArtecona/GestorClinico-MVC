<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestión Interna</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/portal-admin.css" />
</head>
<body>
    <div class="top-bar">
        <div class="d-flex align-items-center gap-2">
            <i class="bi bi-hospital-fill text-danger fs-4"></i>
            <h5 class="m-0 fw-bold text-dark">SISTEMA DE GESTIÓN</h5>
        </div>
        <div>
            <span class="text-muted me-2 small">Admin: <strong>@User.Identity?.Name</strong></span>
            <a href="@Url.Action("Logout", "Account")" class="btn btn-sm btn-outline-dark">Salir</a>
        </div>
    </div>

    <div class="main-container">
        <div class="sidebar">

            <div class="sidebar-header">Menú Principal</div>
            <a href="@Url.Action("Administrativo", "Portal")"><i class="bi bi-speedometer2"></i> Dashboard</a>

            <a href="@Url.Action("Index", "Turnera")"><i class="bi bi-display"></i> Turnera</a>
            <a href="@Url.Action("Index", "Guardia")"><i class="bi bi-bandaid"></i> Guardia</a>

            <div class="sidebar-header">Gestión Médica</div>
            <a href="@Url.Action("Gestionar", "Agenda")"><i class="bi bi-calendar-week"></i> Agendas</a>

            <div class="sidebar-header">Gestión de Personal</div>
            <a href="@Url.Action("Create", "Medico")"><i class="bi bi-heart-pulse"></i> Médicos</a>
            <a href="@Url.Action("Create", "Paciente")"><i class="bi bi-people"></i> Pacientes</a>
            <a href="@Url.Action("Create", "Administrativo")"><i class="bi bi-person-badge"></i> Administrativos</a>

            <div class="sidebar-header">Configuración</div>
            <a href="@Url.Action("Create", "CentroMedico")"><i class="bi bi-building"></i> Centros Médicos</a>
            <a href="@Url.Action("Create", "Especialidad")"><i class="bi bi-tags"></i> Especialidades</a>
        </div>

        <div class="content">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>