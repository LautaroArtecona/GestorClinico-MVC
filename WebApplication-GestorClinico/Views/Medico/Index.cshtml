@model IEnumerable<WebApplication_GestorClinico.Models.Medico>

@{
    ViewData["Title"] = "Gestión de Médicos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark fw-bold"><i class="bi bi-heart-pulse"></i> Listado de Médicos</h3>
        <a asp-action="Create" class="btn btn-success fw-bold shadow-sm">
            <i class="bi bi-plus-circle"></i> Nuevo Médico
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Matrícula</th>
                        <th>Profesional</th>
                        <th>Especialidad</th>
                        <th>DNI</th>
                        <th>Email</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 text-primary fw-bold">@item.Matricula</td>
                            <td class="fw-bold">@item.Apellido, @item.Nombre</td>
                            <td><span class="badge bg-success">@item.Especialidad?.Nombre</span></td>
                            <td>@item.Dni</td>
                            <td>@item.Email</td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info"><i class="bi bi-eye"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">

                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar"
                                            onclick="return confirm('¿Está seguro de que desea eliminar a @item.Nombre @item.Apellido?');">
                                        <i class="bi bi-trash"></i>
                                    </button>

                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <p>No se encontraron médicos registrados.</p>
                </div>
            }
        </div>
    </div>
</div>