@model WebApplication_GestorClinico.Models.Vistas.AdminDashboard

@{
    ViewData["Title"] = "Dashboard General";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 class="mb-4 fw-bold text-dark">Panel de Control</h3>

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-primary">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="text-muted text-uppercase small fw-bold">Médicos Activos</h6>
                    <h2 class="fw-bold text-primary mb-0">@Model.CantidadMedicos</h2>
                </div>
                <i class="bi bi-heart-pulse fs-1 text-primary opacity-25"></i>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-dark">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="text-muted text-uppercase small fw-bold">Empleados</h6>
                    <h2 class="fw-bold text-dark mb-0">@Model.CantidadAdministrativos</h2>
                </div>
                <i class="bi bi-building fs-1 text-dark opacity-25"></i>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card border-0 shadow-sm h-100 bg-white border-start border-4 border-info">
            <div class="card-body d-flex align-items-center justify-content-between">
                <div>
                    <h6 class="text-muted text-uppercase small fw-bold">Pacientes</h6>
                    <h2 class="fw-bold text-info mb-0">@Model.CantidadPacientes</h2>
                </div>
                <i class="bi bi-people fs-1 text-info opacity-25"></i>
            </div>
        </div>
    </div>
</div>

<h5 class="fw-bold text-dark mb-3 border-bottom pb-2">
    <i class="bi bi-hospital text-danger"></i> Estado de Guardias por Sede
</h5>

@if (Model.EstadisticasPorCentro.Any())
{
    <div class="row g-4">
        @foreach (var centro in Model.EstadisticasPorCentro)
        {
            <div class="col-lg-6">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="m-0 fw-bold text-dark">@centro.NombreBarrio</h5>
                            <small class="text-muted"><i class="bi bi-geo-alt"></i> @centro.Direccion</small>
                        </div>
                        @if (centro.PacientesEnEspera > 5)
                        {
                            <span class="badge bg-danger">Alta Demanda</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Normal</span>
                        }
                    </div>

                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4 border-end">
                                <h3 class="fw-bold text-danger mb-0">@centro.PacientesEnEspera</h3>
                                <small class="text-muted text-uppercase" style="font-size: 0.7rem;">En Espera</small>
                            </div>

                            <div class="col-4 border-end">
                                <h3 class="fw-bold text-success mb-0">@centro.AtendidosHoy</h3>
                                <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Atendidos Hoy</small>
                            </div>

                            <div class="col-4">
                                <h3 class="fw-bold text-warning mb-0">@centro.DemoraPromedio</h3>
                                <small class="text-muted text-uppercase" style="font-size: 0.7rem;">Demora Prom.</small>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light text-center border-0">
                        <a href="@Url.Action("Index", "Guardia")" class="btn btn-sm btn-outline-dark w-100">
                            Gestionar esta Guardia
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-light text-center py-5">
        <p class="text-muted">No hay centros médicos activos configurados.</p>
    </div>
}