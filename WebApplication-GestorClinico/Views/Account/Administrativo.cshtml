@model WebApplication_GestorClinico.Models.Vistas.Login
@{
    ViewData["Title"] = "Acceso Administrativo";
    Layout = null; // Sin menú principal
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #343a40; /* Gris oscuro de fondo */
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        .admin-card {
            background-color: #fff;
            width: 400px;
            padding: 40px;
            border-radius: 5px;
            border-top: 5px solid #dc3545; /* Línea roja superior (detalle corporativo) */
            box-shadow: 0 10px 20px rgba(0,0,0,0.3);
        }
        .btn-admin {
            background-color: #343a40;
            color: white;
            transition: 0.3s;
        }
        .btn-admin:hover {
            background-color: #000;
            color: white;
        }
    </style>
</head>

<body>
    <div class="admin-card">
        <div class="text-center mb-4">
            <h3 class="text-dark">Administración</h3>
            <p class="text-muted">Gestión Interna de Clínica</p>
        </div>

        <form asp-action="Login" asp-route-rolEsperado="Administrativo" method="post">

            <div asp-validation-summary="ModelOnly" class="alert alert-danger p-2 text-center" style="font-size: 0.9rem"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Legajo" />
                <label for="Username">Legajo / Usuario</label>
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Password" class="form-control" type="password" placeholder="Contraseña" />
                <label for="Password">Contraseña</label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-admin btn-lg">Acceder al Sistema</button>
            </div>
        </form>

        <div class="mt-4 text-center">
            <a href="@Url.Action("Index", "Home")" class="text-muted text-decoration-none small">← Volver al inicio</a>
        </div>
    </div>
</body>
