@model WebApplication_GestorClinico.Models.Vistas.PacienteDashboard

@{
    ViewData["Title"] = "Portal Paciente";
    Layout = "~/Views/Shared/_LayoutPaciente.cshtml";
}

<div class="container-fluid">

    <div class="card border-0 shadow-sm mb-4 overflow-hidden" style="background: linear-gradient(90deg, #005a87 0%, #00a8e8 100%); border-radius: 15px;">
        <div class="row g-0">
            <div class="col-md-8 p-5 d-flex flex-column justify-content-center text-white">
                <h1 class="fw-bold display-5 mb-2">Hola, @Model.NombreCompleto</h1>
                <p class="fs-5 opacity-75 mb-4">Tenés <strong>@Model.TurnosPendientes</strong> turnos programados próximamente.</p>

                <div>
                    <a asp-action="MisTurnos" class="btn btn-light text-primary fw-bold px-4 py-2 shadow-sm rounded-pill">
                        <i class="bi bi-calendar-plus"></i> Sacar Turno Nuevo
                    </a>
                </div>
            </div>
            <div class="col-md-4 d-none d-md-block" style="background-image: url('https://img.freepik.com/free-photo/doctor-offering-medical-teleconsultation_23-2149329007.jpg'); background-size: cover; background-position: center; opacity: 0.8;">
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body p-4">
                    <h5 class="card-title text-primary fw-bold mb-3">
                        <i class="bi bi-clock-history"></i> Próximo Turno
                    </h5>

                    @if (Model.ProximoTurno != null)
                    {
                        <div class="d-flex align-items-center bg-light p-3 rounded border">
                            <div class="bg-white rounded-circle p-3 me-3 shadow-sm text-center" style="width: 70px; height: 70px;">
                                <span class="d-block fw-bold text-danger">@Model.ProximoTurno.FechaHoraInicio.Day</span>
                                <span class="small text-uppercase">@Model.ProximoTurno.FechaHoraInicio.ToString("MMM")</span>
                            </div>
                            <div>
                                <h4 class="mb-0 fw-bold">@Model.ProximoTurno.FechaHoraInicio.ToString("HH:mm") hs</h4>
                                <p class="mb-0 text-muted">@Model.ProximoTurno.Especialidad.Nombre</p>
                                <small class="text-primary">Dr/a. @Model.ProximoTurno.Medico.Apellido</small>
                            </div>
                        </div>
                        <div class="mt-3 text-end">
                            <a asp-action="MisTurnos" class="btn btn-sm btn-outline-primary">Ver detalle</a>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center text-muted">
                            <div class="bg-light rounded-circle p-3 me-3">
                                <i class="bi bi-calendar-check fs-4"></i>
                            </div>
                            <div>
                                <p class="mb-0">No tienes turnos programados.</p>
                                <a asp-action="MisTurnos" class="small text-decoration-none fw-bold">Ver historial completo</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="row g-3 h-100">
                <div class="col-6">
                    <a asp-action="MisEstudios" class="card shadow-sm border-0 text-decoration-none h-100 card-hover">
                        <div class="card-body text-center p-4 d-flex flex-column justify-content-center">
                            <i class="bi bi-file-earmark-medical fs-1 text-success mb-2 d-block"></i>
                            <span class="text-dark fw-bold">Mis Estudios</span>
                        </div>
                    </a>
                </div>
                <div class="col-6">
                    <a asp-action="MisRecetas" class="card shadow-sm border-0 text-decoration-none h-100 card-hover">
                        <div class="card-body text-center p-4 d-flex flex-column justify-content-center">
                            <i class="bi bi-capsule fs-1 text-danger mb-2 d-block"></i>
                            <span class="text-dark fw-bold">Recetas</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>