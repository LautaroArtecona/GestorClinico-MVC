@model IEnumerable<WebApplication_GestorClinico.Models.OrdenMedica>

@{
    ViewData["Title"] = "Mis Estudios";
    Layout = "~/Views/Shared/_LayoutPaciente.cshtml";
}

<div class="container-fluid">
    <h4 class="fw-bold text-dark mb-4"><i class="bi bi-file-earmark-medical text-primary"></i> Mis Estudios y Órdenes</h4>

    @if (Model.Any())
    {
        <div class="card shadow-sm border-0">
            <div class="list-group list-group-flush">
                @foreach (var estudio in Model)
                {
                    <div class="list-group-item p-4 border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-start gap-3">
                                <div class="bg-light rounded-circle p-3 text-primary">
                                    <i class="bi bi-clipboard2-pulse fs-3"></i>
                                </div>

                                <div>
                                    <h5 class="fw-bold text-dark mb-1">@estudio.NombreEstudio</h5>
                                    <p class="text-muted small mb-2">
                                        Solicitado el: <strong>@estudio.Fecha.ToString("dd/MM/yyyy")</strong>
                                    </p>

                                    @if (!string.IsNullOrEmpty(estudio.Diagnostico))
                                    {
                                        <span class="badge bg-info text-dark bg-opacity-10 border border-info">
                                            Diagnóstico: @estudio.Diagnostico
                                        </span>
                                    }
                                </div>
                            </div>

                            <div class="text-end">
                                <button class="btn btn-outline-primary btn-sm fw-bold">
                                    <i class="bi bi-download"></i> Descargar Orden
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <img src="https://cdn-icons-png.flaticon.com/512/4076/4076478.png" width="100" class="opacity-50 mb-3">
            <h5 class="text-muted">No tenés estudios solicitados</h5>
            <p class="text-secondary small">Las órdenes médicas que generen tus doctores aparecerán aquí.</p>
        </div>
    }
</div>