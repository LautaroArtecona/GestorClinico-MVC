@model WebApplication_GestorClinico.Models.Especialidad

@{
    ViewData["Title"] = "Nueva Especialidad";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark fw-bold">Nueva Especialidad</h3>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Ver listado
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3 border-bottom">
                    <h5 class="m-0 font-weight-bold text-warning">
                        <i class="bi bi-tags-fill"></i> Detalle de Especialidad
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create">

                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Cardiología" />
                            <label asp-for="Nombre">Nombre de la Especialidad</label>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-warning text-white btn-lg shadow-sm fw-bold">
                                <i class="bi bi-save"></i> Guardar Especialidad
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}