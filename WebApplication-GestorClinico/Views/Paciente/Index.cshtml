@model IEnumerable<WebApplication_GestorClinico.Models.Paciente>

@{
    ViewData["Title"] = "Gestión de Pacientes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark fw-bold"><i class="bi bi-people"></i> Listado de Pacientes</h3>
        <a asp-action="Create" class="btn btn-info text-white fw-bold shadow-sm">
            <i class="bi bi-person-plus-fill"></i> Nuevo Paciente
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Nombre Completo</th>
                        <th>DNI</th>
                        <th>Obra Social</th>
                        <th>Email</th>
                        <th>Usuario</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@item.Apellido, @item.Nombre</td>
                            <td>@item.Dni</td>
                            <td><span class="badge bg-secondary">@item.ObraSocial</span></td>
                            <td>@item.Email</td>
                            <td><small class="text-muted">@item.Usuario?.UserName</small></td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar"><i class="bi bi-pencil"></i></a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Ver Detalle"><i class="bi bi-eye"></i></a>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">

                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar"
                                            onclick="return confirm('¿Está seguro de que desea eliminar a @item.Nombre @item.Apellido?');">
                                        <i class="bi bi-trash"></i>
                                    </button>

                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <p>No se encontraron pacientes registrados.</p>
                </div>
            }
        </div>
    </div>
</div>
