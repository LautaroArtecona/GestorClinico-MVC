@model IEnumerable<WebApplication_GestorClinico.Models.CentroMedico>

@{
    ViewData["Title"] = "Centros Médicos";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark fw-bold">
            <i class="bi bi-hospital text-success"></i> Centros Médicos
        </h3>
        <a asp-action="Create" class="btn btn-success text-white fw-bold shadow-sm">
            <i class="bi bi-building-add"></i> Nueva Sede
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-hover mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Barrio</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th class="text-center">Clínica ID</th>
                        <th class="text-center">Estado</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-dark">@item.Barrio</td>
                            <td>
                                <i class="bi bi-geo-alt-fill text-secondary small"></i> @item.Direccion
                            </td>
                            <td>@item.Telefono</td>
                            <td class="text-center">
                                <span class="badge bg-light text-dark border">ID: @item.ClinicaId</span>
                            </td>
                            <td class="text-center">
                                @if (item.Activo)
                                {
                                    <span class="badge bg-success bg-opacity-75">Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Detalles">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-building-dash fs-1 d-block mb-2"></i>
                    <p>No se encontraron centros médicos registrados.</p>
                </div>
            }
        </div>
    </div>
</div>