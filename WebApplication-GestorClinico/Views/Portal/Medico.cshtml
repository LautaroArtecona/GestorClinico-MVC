@model WebApplication_GestorClinico.Models.Vistas.MedicoDashboard

@{
    ViewData["Title"] = "Portal Médico";
    Layout = "~/Views/Shared/_LayoutMedico.cshtml";
}
<h2 class="fw-bold text-dark mb-4">Resumen de Agenda</h2>

@if (Model.TieneAgenda)
{
    <div class="card border-0 shadow-sm mb-4 bg-white">
        <div class="card-body p-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="text-muted mb-1">Próxima Jornada Laboral</h5>
                    <h1 class="display-4 fw-bold text-dark">
                        @Model.ProximaFecha?.ToString("dddd dd 'de' MMMM")
                    </h1>
                    <p class="lead mb-0 text-secondary">
                        <i class="bi bi-clock"></i> Horario de atención:
                        <span class="fw-bold text-dark">@Model.HorarioInicio a @Model.HorarioFin hs</span>
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <i class="bi bi-calendar-check text-muted opacity-25" style="font-size: 5rem;"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card card-stat h-100 bg-white p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-number text-success">@Model.TurnosLibres</div>
                        <div class="stat-label">Turnos Libres</div>
                    </div>
                    <div class="bg-light rounded-circle p-3">
                        <i class="bi bi-check-circle text-success fs-3"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card card-stat h-100 bg-white p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stat-number" style="color: #8e44ad;">@Model.TurnosAsignados</div>
                        <div class="stat-label">Pacientes Agendados</div>
                    </div>
                    <div class="bg-light rounded-circle p-3">
                        <i class="bi bi-person-fill fs-3" style="color: #8e44ad;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <img src="https://cdn-icons-png.flaticon.com/512/7486/7486754.png" width="120" class="mb-3 opacity-50">
        <h4 class="text-muted">No tiene agenda programada</h4>
        <p class="text-secondary">Actualmente no tiene turnos generados a futuro.</p>
        <button class="btn btn-outline-secondary">Solicitar programación de agenda</button>
    </div>
}