@model WebApplication_GestorClinico.Models.Medico

@{
    ViewData["Title"] = "Alta de Médico";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark fw-bold">Nuevo Médico</h3>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Ver listado
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="m-0 font-weight-bold text-primary">
                <i class="bi bi-person-vcard"></i> Datos Profesionales
            </h5>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create">

                <div asp-validation-summary="All" class="alert alert-danger d-none"></div>

                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted text-uppercase small mb-3">Información Personal</h6>

                        <div class="form-floating mb-3">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                            <label asp-for="Nombre">Nombre</label>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                            <label asp-for="Apellido">Apellido</label>
                            <span asp-validation-for="Apellido" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Dni" class="form-control" placeholder="DNI" />
                            <label asp-for="Dni">DNI</label>
                            <span asp-validation-for="Dni" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-muted text-uppercase small mb-3">Datos de Cuenta</h6>

                        <div class="form-floating mb-3">
                            <input asp-for="Matricula" class="form-control" placeholder="Matrícula" />
                            <label asp-for="Matricula">Matrícula</label>
                            <span asp-validation-for="Matricula" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="EspecialidadId" class="form-select" asp-items="ViewBag.EspecialidadId"></select>
                            <label asp-for="EspecialidadId">Especialidad</label>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success btn-lg px-5 shadow-sm">
                        <i class="bi bi-check-lg"></i> Registrar Médico
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}