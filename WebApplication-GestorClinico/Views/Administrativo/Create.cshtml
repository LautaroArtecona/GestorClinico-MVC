@model WebApplication_GestorClinico.Models.Administrativo

@{
    ViewData["Title"] = "Alta de Administrativo";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="text-dark fw-bold">Nuevo Administrativo</h3>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Ver listado
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-bottom">
            <h5 class="m-0 font-weight-bold text-danger">
                <i class="bi bi-person-badge"></i> Datos de Empleado
            </h5>
        </div>

        <div class="card-body p-4">
            <div class="alert alert-info mb-4">
                <i class="bi bi-info-circle-fill"></i>
                El <strong>Legajo</strong> se generará automáticamente al guardar el registro.
            </div>

            <form asp-action="Create">

                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                            <label asp-for="Nombre">Nombre</label>
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                            <label asp-for="Apellido">Apellido</label>
                            <span asp-validation-for="Apellido" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            <input asp-for="Dni" class="form-control" placeholder="DNI" />
                            <label asp-for="Dni">DNI</label>
                            <span asp-validation-for="Dni" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email">Email</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-dark btn-lg px-5 shadow-sm">
                        <i class="bi bi-save"></i> Registrar Empleado
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}